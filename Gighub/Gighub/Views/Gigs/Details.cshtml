@model Gighub.ViewModels.GigDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Gig.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info btn-sm js-toggle-follow" data-user-id="@Model.Gig.ArtistId">UnFollow</button>
        }
        else
        {
            <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@Model.Gig.ArtistId">Follow</button>
        }
    }
</h2>
<span>Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("d MMM") at @Model.Gig.DateTime.ToString("HH:mm") </span>

@if (User.Identity.IsAuthenticated && Model.IsAttending)
{
    <span>You are going to this event.</span>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            GigsDetailsController.init();
        });
    </script>
}